<Window x:Class="CallTracking.BankListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление банка" Height="216" Width="300" ResizeMode="NoResize">
    <Grid>
        <ComboBox x:Name="ComboBox" 
                  HorizontalAlignment="Stretch" 
                  Margin="0,72,0,0" 
                  VerticalAlignment="Top" 
                  Width="240" 
                  DropDownOpened="ComboDb_OnDropDownOpened"/>
        
        <Button x:Name="ConfirmAddButton" 
                Content="Подтвердить" 
                HorizontalAlignment="Center" 
                Margin="40,143,156,0" 
                VerticalAlignment="Top" 
                Width="96" 
                Click="ConfirmAddButton_Click" 
                IsDefault="True" />
        
        <Button x:Name="CancelAddButton" 
                Content="Отмена" 
                HorizontalAlignment="Center" 
                Margin="155,143,41,0" 
                VerticalAlignment="Top" 
                Width="96" 
                Click="CancelAddButton_Click" 
                IsCancel="True"/>
    </Grid>
</Window>
